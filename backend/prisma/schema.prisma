// --------------------------------------
// CONFIGURAÇÃO
// --------------------------------------

generator client {
  provider = "prisma-client-js"
}

// GERA O DIAGRAMA PARA O TEU RELATÓRIO
generator erd {
  provider = "prisma-erd-generator"
  output   = "../ERD.svg"
  theme    = "forest"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// --------------------------------------
// 1. MÓDULO UTILIZADORES
// --------------------------------------

enum UserRole {
  ADMIN
  SALES
  WAREHOUSE
  CLIENT
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String    @map("password_hash")
  fullName     String    @map("full_name")
  role         UserRole  @default(CLIENT)
  isActive     Boolean   @default(true) @map("is_active")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  
  movements    StockMovement[]
  logs         AuditLog[]
  reservations Reservation[]
  favorites    UserFavorite[]

  @@map("users")
}

model UserFavorite {
  userId Int @map("user_id")
  partId Int @map("part_id")
  
  user   User @relation(fields: [userId], references: [id])
  part   Part @relation(fields: [partId], references: [id])

  @@id([userId, partId])
  @@map("user_favorites")
}

// --------------------------------------
// 2. MÓDULO CATÁLOGO (PEÇAS)
// --------------------------------------

model Category {
  id        Int        @id @default(autoincrement())
  name      String
  parentId  Int?       @map("parent_id")
  
  parent    Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryHierarchy")
  
  parts     Part[]
  deletedAt DateTime?  @map("deleted_at")

  @@map("categories")
}

model Supplier {
  id        Int       @id @default(autoincrement())
  name      String
  nif       String?
  contact   String?
  parts     Part[]
  deletedAt DateTime? @map("deleted_at")

  @@map("suppliers")
}

model Part {
  id          Int       @id @default(autoincrement())
  name        String
  refInternal String    @unique @map("ref_internal")
  refOEM      String?   @map("ref_oem")
  description String?   @db.Text
  price       Decimal   @db.Decimal(10, 2)
  condition   String    @default("Used") 
  isVisible   Boolean   @default(true) @map("is_visible")
  
  categoryId  Int       @map("category_id")
  category    Category  @relation(fields: [categoryId], references: [id])
  supplierId  Int?      @map("supplier_id")
  supplier    Supplier? @relation(fields: [supplierId], references: [id])
  
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")

  locations      PartLocation[]
  images         PartImage[]
  specifications PartSpecification[]
  movements      StockMovement[]
  reservationItems ReservationItem[]
  favoritedBy    UserFavorite[]

  @@map("parts")
}

model PartImage {
  id        Int     @id @default(autoincrement())
  url       String
  isMain    Boolean @default(false) @map("is_main")
  partId    Int     @map("part_id")
  part      Part    @relation(fields: [partId], references: [id])

  @@map("part_images")
}

model Specification {
  id        Int                 @id @default(autoincrement())
  name      String              
  unit      String?             
  values    PartSpecification[]

  @@map("specifications")
}

model PartSpecification {
  partId    Int           @map("part_id")
  specId    Int           @map("spec_id")
  value     String        
  
  part      Part          @relation(fields: [partId], references: [id])
  spec      Specification @relation(fields: [specId], references: [id])

  @@id([partId, specId])
  @@map("part_specifications")
}

// --------------------------------------
// 3. MÓDULO ARMAZÉM
// --------------------------------------

model Warehouse {
  id        Int        @id @default(autoincrement())
  code      String     @unique 
  name      String
  locations Location[]
  deletedAt DateTime?  @map("deleted_at")

  @@map("warehouses")
}

model Location {
  id          Int       @id @default(autoincrement())
  warehouseId Int       @map("warehouse_id")
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])
  
  rack        String    
  shelf       String    
  pallet      String?   
  fullCode    String    @unique @map("full_code") 

  parts       PartLocation[]
  movementsFrom StockMovement[] @relation("SourceLocation")
  movementsTo   StockMovement[] @relation("DestLocation")

  @@map("locations")
}

model PartLocation {
  partId     Int      @map("part_id")
  locationId Int      @map("location_id")
  quantity   Int      
  
  part       Part     @relation(fields: [partId], references: [id])
  location   Location @relation(fields: [locationId], references: [id])

  @@id([partId, locationId])
  @@map("part_locations")
}

// --------------------------------------
// 4. MÓDULO OPERAÇÕES
// --------------------------------------

enum ReservationStatus {
  PENDING
  CONFIRMED
  IN_PREPARATION
  READY_TO_SHIP
  COMPLETED
  CANCELLED
}

model Reservation {
  id          Int               @id @default(autoincrement())
  userId      Int               @map("user_id") 
  user        User              @relation(fields: [userId], references: [id])
  status      ReservationStatus @default(PENDING)
  notes       String?
  createdAt   DateTime          @default(now()) @map("created_at")
  updatedAt   DateTime          @updatedAt @map("updated_at")

  items       ReservationItem[]

  @@map("reservations")
}

model ReservationItem {
  id            Int         @id @default(autoincrement())
  reservationId Int         @map("reservation_id")
  partId        Int         @map("part_id")
  quantity      Int
  
  reservation   Reservation @relation(fields: [reservationId], references: [id])
  part          Part        @relation(fields: [partId], references: [id])

  @@map("reservation_items")
}

enum MovementType {
  ENTRY
  EXIT
  TRANSFER
  ADJUSTMENT
  RETURN
}

model StockMovement {
  id          Int          @id @default(autoincrement())
  partId      Int          @map("part_id")
  userId      Int          @map("user_id")
  type        MovementType
  quantity    Int          
  
  sourceLocId Int?         @map("source_location_id")
  destLocId   Int?         @map("dest_location_id")
  timestamp   DateTime     @default(now())
  
  part        Part         @relation(fields: [partId], references: [id])
  user        User         @relation(fields: [userId], references: [id])
  sourceLoc   Location?    @relation("SourceLocation", fields: [sourceLocId], references: [id])
  destLoc     Location?    @relation("DestLocation", fields: [destLocId], references: [id])

  @@map("stock_movements")
}

// --------------------------------------
// 5. MÓDULO AUDITORIA
// --------------------------------------

model AuditLog {
  id         Int      @id @default(autoincrement())
  userId     Int      @map("user_id")
  action     String   
  entity     String   
  entityId   String   
  details    Json?    
  timestamp  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}